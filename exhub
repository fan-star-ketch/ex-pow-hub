-- SX Cyberpunk Exploit Panel (20+ Features)
-- LocalScript inside StarterGui (for testing in your own place only)

-- SERVICES
local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")
local RS = game:GetService("RunService")
local TweenService = game:GetService("TweenService")
local Lighting = game:GetService("Lighting")

-- PLAYER
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:FindFirstChildOfClass("Humanoid") or character:WaitForChild("Humanoid")

-- Settings
local DEFAULT_SPEED, MAX_SPEED = 16, 200
local DEFAULT_JUMP, MAX_JUMP = 50, 300

-- Panel state
local panelLoaded = false
local panelGui = nil

-- Neon/Cyberpunk UI Color Palette
local neonBlue = Color3.fromRGB(0, 255, 255)
local neonPink = Color3.fromRGB(255, 0, 128)
local neonYellow = Color3.fromRGB(255, 255, 0)
local darkBG = Color3.fromRGB(15, 15, 20)

-- Small UI creator
local function makeButton(parent, text, color)
    local b = Instance.new("TextButton")
    b.Size = UDim2.new(1, -20, 0, 40)
    b.Position = UDim2.new(0, 10, 0, 0)
    b.BackgroundColor3 = color or darkBG
    b.Font = Enum.Font.GothamBold
    b.TextSize = 16
    b.TextColor3 = neonBlue
    b.Text = text
    b.AutoButtonColor = false
    local c = Instance.new("UICorner", b)
    c.CornerRadius = UDim.new(0, 8)
    local glow = Instance.new("UIStroke", b)
    glow.Thickness = 2
    glow.Color = neonPink
    b.MouseEnter:Connect(function()
        TweenService:Create(b, TweenInfo.new(0.2), {BackgroundColor3 = neonPink, TextColor3 = neonYellow}):Play()
    end)
    b.MouseLeave:Connect(function()
        TweenService:Create(b, TweenInfo.new(0.2), {BackgroundColor3 = color or darkBG, TextColor3 = neonBlue}):Play()
    end)
    b.Parent = parent
    return b
end

-- Build Panel
local function buildPanel()
    if panelGui then panelGui:Destroy() end

    panelGui = Instance.new("ScreenGui")
    panelGui.Name = "SX_CyberpunkPanel"
    panelGui.ResetOnSpawn = false
    panelGui.Parent = playerGui

    local frame = Instance.new("Frame")
    frame.Name = "Main"
    frame.Size = UDim2.new(0, 440, 0, 650)
    frame.Position = UDim2.new(0.5, 0, 0.5, 0)
    frame.AnchorPoint = Vector2.new(0.5, 0.5)
    frame.BackgroundColor3 = darkBG
    frame.Active = true
    frame.Draggable = true
    local fCorner = Instance.new("UICorner", frame)
    fCorner.CornerRadius = UDim.new(0, 12)
    local fStroke = Instance.new("UIStroke", frame)
    fStroke.Thickness = 3
    fStroke.Color = neonBlue
    frame.Parent = panelGui

    local title = Instance.new("TextLabel", frame)
    title.Size = UDim2.new(1, -20, 0, 40)
    title.Position = UDim2.new(0, 10, 0, 5)
    title.BackgroundTransparency = 1
    title.Text = "⚡ SX Cyberpunk Panel (20+ Features) ⚡"
    title.Font = Enum.Font.GothamBold
    title.TextSize = 20
    title.TextColor3 = neonPink
    title.TextXAlignment = Enum.TextXAlignment.Center

    local container = Instance.new("ScrollingFrame", frame)
    container.Size = UDim2.new(1, 0, 1, -50)
    container.Position = UDim2.new(0, 0, 0, 50)
    container.BackgroundTransparency = 1
    container.CanvasSize = UDim2.new(0,0,2,0)
    container.ScrollBarThickness = 6

    local list = Instance.new("UIListLayout", container)
    list.Padding = UDim.new(0, 8)

    -- === Features ===
    local features = {}

    -- Movement/Physics
    local speedBtn = makeButton(container, "Toggle Super Speed")
    speedBtn.MouseButton1Click:Connect(function()
        humanoid.WalkSpeed = (humanoid.WalkSpeed == DEFAULT_SPEED) and 100 or DEFAULT_SPEED
    end)

    local jumpBtn = makeButton(container, "Toggle Super Jump")
    jumpBtn.MouseButton1Click:Connect(function()
        humanoid.JumpPower = (humanoid.JumpPower == DEFAULT_JUMP) and 200 or DEFAULT_JUMP
    end)

    local infJumpBtn = makeButton(container, "Toggle Infinite Jump")
    local infConn
    infJumpBtn.MouseButton1Click:Connect(function()
        if infConn then infConn:Disconnect() infConn=nil infJumpBtn.Text="Infinite Jump [OFF]" return end
        infConn = UIS.JumpRequest:Connect(function()
            humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
        end)
        infJumpBtn.Text="Infinite Jump [ON]"
    end)

    local noclipBtn = makeButton(container, "Toggle Noclip")
    local noclipConn
    noclipBtn.MouseButton1Click:Connect(function()
        if noclipConn then noclipConn:Disconnect() noclipConn=nil noclipBtn.Text="Noclip [OFF]" return end
        noclipConn = RS.Stepped:Connect(function()
            for _, p in pairs(character:GetDescendants()) do
                if p:IsA("BasePart") then p.CanCollide = false end
            end
        end)
        noclipBtn.Text="Noclip [ON]"
    end)

    local gravityBtn = makeButton(container, "Toggle Low Gravity")
    gravityBtn.MouseButton1Click:Connect(function()
        workspace.Gravity = (workspace.Gravity==196.2) and 98 or 196.2
    end)

    local flyBtn = makeButton(container, "Toggle Fly")
    local flying = false
    flyBtn.MouseButton1Click:Connect(function()
        flying = not flying
        local hb = RS.Heartbeat:Connect(function()
            if flying and character:FindFirstChild("HumanoidRootPart") then
                local root = character.HumanoidRootPart
                root.Velocity = (UIS:IsKeyDown(Enum.KeyCode.Space) and Vector3.new(0,50,0)) or (UIS:IsKeyDown(Enum.KeyCode.LeftControl) and Vector3.new(0,-50,0)) or root.Velocity
            end
        end)
    end)

    -- Teleportation
    makeButton(container,"Teleport Up 50").MouseButton1Click:Connect(function()
        if character:FindFirstChild("HumanoidRootPart") then
            character.HumanoidRootPart.CFrame *= CFrame.new(0,50,0)
        end
    end)
    makeButton(container,"Blink Forward 10").MouseButton1Click:Connect(function()
        if character:FindFirstChild("HumanoidRootPart") then
            character.HumanoidRootPart.CFrame += character.HumanoidRootPart.CFrame.LookVector*10
        end
    end)
    makeButton(container,"Teleport to Random Player").MouseButton1Click:Connect(function()
        local others = Players:GetPlayers()
        local target = others[math.random(1,#others)]
        if target and target.Character and target.Character:FindFirstChild("HumanoidRootPart") then
            character.HumanoidRootPart.CFrame = target.Character.HumanoidRootPart.CFrame+Vector3.new(2,0,0)
        end
    end)

    -- Health/Utility
    makeButton(container,"Heal to Full").MouseButton1Click:Connect(function()
        humanoid.Health=humanoid.MaxHealth
    end)
    makeButton(container,"Sit/Unsit").MouseButton1Click:Connect(function()
        humanoid.Sit=not humanoid.Sit
    end)
    makeButton(container,"Reset All").MouseButton1Click:Connect(function()
        humanoid.WalkSpeed=DEFAULT_SPEED humanoid.JumpPower=DEFAULT_JUMP humanoid.Sit=false
    end)

    -- Visual/World
    makeButton(container,"Toggle Night Vision").MouseButton1Click:Connect(function()
        Lighting.Brightness = (Lighting.Brightness==2) and 5 or 2
        Lighting.Ambient = (Lighting.Ambient==Color3.new(1,1,1)) and Color3.fromRGB(0,255,200) or Color3.new(1,1,1)
    end)
    makeButton(container,"Toggle Neon Outline").MouseButton1Click:Connect(function()
        for _,p in pairs(character:GetDescendants()) do
            if p:IsA("BasePart") then p.Material = (p.Material==Enum.Material.Neon) and Enum.Material.SmoothPlastic or Enum.Material.Neon end
        end
    end)
    makeButton(container,"Spin Character").MouseButton1Click:Connect(function()
        local root=character:FindFirstChild("HumanoidRootPart")
        if root then root.CFrame=root.CFrame*CFrame.Angles(0,math.rad(90),0) end
    end)
    makeButton(container,"Toggle SlowMo").MouseButton1Click:Connect(function()
        RS:Set3dRenderingEnabled(false)
        task.wait(1)
        RS:Set3dRenderingEnabled(true)
    end)

    -- Fun/Gimmicks
    makeButton(container,"Launch Upward").MouseButton1Click:Connect(function()
        character:FindFirstChild("HumanoidRootPart").Velocity=Vector3.new(0,200,0)
    end)
    makeButton(container,"Dance Animation").MouseButton1Click:Connect(function()
        humanoid:LoadAnimation(Instance.new("Animation",workspace)).AnimationId="rbxassetid://507771019" humanoid:PlayAnimation()
    end)
    makeButton(container,"Ragdoll").MouseButton1Click:Connect(function()
        humanoid:ChangeState(Enum.HumanoidStateType.Physics)
    end)
    makeButton(container,"Print Debug State").MouseButton1Click:Connect(function()
        print(features)
    end)

    local neonLabel = Instance.new("TextLabel", frame)
    neonLabel.Size = UDim2.new(1, 0, 0, 20)
    neonLabel.Position = UDim2.new(0, 0, 1, -25)
    neonLabel.BackgroundTransparency = 1
    neonLabel.Text = "Cyberpunk Mode Active ✦"
    neonLabel.Font = Enum.Font.GothamSemibold
    neonLabel.TextSize = 14
    neonLabel.TextColor3 = neonYellow
end

-- Toggle Loader Button
local loaderBtn = Instance.new("TextButton")
loaderBtn.Size = UDim2.new(0, 200, 0, 50)
loaderBtn.Position = UDim2.new(0.5, 0, 0.1, 0)
loaderBtn.AnchorPoint = Vector2.new(0.5, 0)
loaderBtn.BackgroundColor3 = neonBlue
loaderBtn.Font = Enum.Font.GothamBold
loaderBtn.TextSize = 18
loaderBtn.TextColor3 = neonPink
loaderBtn.Text = "Load SX Cyberpunk Panel"
local c = Instance.new("UICorner", loaderBtn)
c.CornerRadius = UDim.new(0, 10)
local glow = Instance.new("UIStroke", loaderBtn)
glow.Thickness = 3
glow.Color = neonPink
loaderBtn.Parent = playerGui

loaderBtn.MouseButton1Click:Connect(function()
    panelLoaded = not panelLoaded
    if panelLoaded then
        buildPanel()
        loaderBtn.Text = "Unload SX Panel"
    else
        if panelGui then panelGui:Destroy() end
        loaderBtn.Text = "Load SX Cyberpunk Panel"
    end
end)

print("[SX Cyberpunk Panel Ready - 20+ Features]")
